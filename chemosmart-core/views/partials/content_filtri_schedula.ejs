                  <p>
                    <%= pazienti[i].indice_malattie_croniche %>
                  </p>
                </div>
                <div class="col-md-4">
                  <label for="indice-alimentazione-scorretta" class="form-label" style="font-weight: bold;">Indice di
                    alimentazione scorretta</label>
                  <p>
                    <%= pazienti[i].indice_alimentazione_scorretta %>
                  </p>
                </div>
                <div class="col-md-4">
                  <label for="indice-obesita" class="form-label" style="font-weight: bold;">Indice di obesità</label>
