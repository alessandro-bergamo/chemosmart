<div class="w-50">
    <form action="updateTerapia" method="post">
        <div class="form-group">
            <label for="cfPaziente">Codice Fiscale</label>
            <input type="text" class="form-control" name="cfPaziente" id="cfPaziente"
                placeholder="<%= terapia.cfPaziente %> ">
        </div>
        <div class="form-group">
            <label for="farmaco">Farmaco</label>
            <input type="text" class="form-control" name="farmaco" id="farmaco" placeholder="<%= terapia.farmaco %>">
        </div>
        <div class="form-group">
            <label for="datetimepicker">Data</label>
            <input type="date" class="form-control datetimepicker " id="dataInizio" name="dataInizio">
        </div>
        <div class="form-group">
            <label for="numAppuntamenti">Numero Appuntamenti</label>
            <input type="number" class="form-control" id="numAppuntamenti"
                placeholder="<%= terapia.numAppuntamenti %>" name="frequenzaAppuntamenti">
        </div>
        <div class="form-group">
            <label for="frequenzaAppuntamenti">Frequenza</label>
            <select class="form-select" name="frequenzaAppuntamenti" id="frequenzaAppuntamenti">
            <% if (terapia.frequenzaAppuntamenti == 7) { %>
                <option value="7" selected>7</option>
                <option value="14">14</option>
                <option value="21">21</option>
            <% } else if(terapia.frequenzaAppuntamenti == 14) {%>
                <option value="7">7</option>
                <option value="14" selected>14</option>
                <option value="21">21</option>
            <% } else if(terapia.frequenzaAppuntamenti == 21) {%>
                <option value="7">7</option>
                <option value="14">14</option>
                <option value="21" selected>21</option>
            <% } %>
            </select>
        </div>
        <input type="hidden" name="id" value="<%= terapia._id %>">
        <button type="submit" class="btn btn-primary mt-3">Modifica</button>
    </form>
</div>

















</div>
</div>
</div>